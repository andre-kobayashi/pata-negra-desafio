<IfModule mod_rewrite.c>
  RewriteEngine On

  # Arquivos e pastas reais passam direto
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback (React Router)
  RewriteRule ^ index.html [L]
</IfModule>

# Segurança básica
Options -Indexes
